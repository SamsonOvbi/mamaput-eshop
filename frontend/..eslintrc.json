{
  "extends": [
    "plugin:@angular-eslint/recommended"
  ],
  "rules": {
    "@angular-eslint/component-selector": ["error", {
      "type": "element",
      "prefix": "app",
      "style": "kebab-case"
    }],
    "@angular-eslint/directive-selector": ["error", {
      "type": "attribute",
      "prefix": "app",
      "style": "camelCase"
    }]
  }
}
 
